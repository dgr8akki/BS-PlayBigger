{
    "name": "bluestacks-server",
    "version": "1.0.0",
    "description": "Bluestacks - Project",
    "main": "index.js",
    "scripts": {
        "install-all": "npm install && cd client && npm install",
        "start": "node index.js",
        "heroku-postbuild": "cd client && npm install && npm run build",
        "client": "cd client && npm start",
        "server": "nodemon index.js",
        "eslint": "eslint --debug ./",
        "eslint:fix": "eslint --fix ./",
        "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
    },
    "author": "Aakash Pahuja",
    "dependencies": {
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "help": "^3.0.2",
        "lokijs": "^1.5.8",
        "moment": "^2.24.0",
        "node-sass": "^4.13.0"
    },
    "devDependencies": {
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "nodemon": "^2.0.7"
    }
}
